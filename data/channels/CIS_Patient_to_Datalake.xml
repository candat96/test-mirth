        <query>INSERT INTO datalake.patients (tenant_id, patient_id, full_name, birth_date, gender, phone, address, raw_data)
VALUES (
    ${tenant_id},
    ${patient_id},
    ${full_name},
    ${birth_date}::date,
    ${gender},
    ${phone},
    ${address},
    ${raw_data}::jsonb
)
ON CONFLICT (tenant_id, patient_id) 
DO UPDATE SET 
    full_name = EXCLUDED.full_name,
    birth_date = EXCLUDED.birth_date,
    gender = EXCLUDED.gender,
    phone = EXCLUDED.phone,
    address = EXCLUDED.address,
