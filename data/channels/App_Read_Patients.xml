            <script>// Get result from database query
var dbResult = responseMap.get('Query_Datalake');
var resultList = [];

try {
    if (dbResult != null &amp;&amp; dbResult.getResultList() != null) {
        var rows = dbResult.getResultList();
        for (var i = 0; i &lt; rows.size(); i++) {
            var row = rows.get(i);
            resultList.push({
                patientId: row.get('patient_id') != null ? row.get('patient_id').toString() : '',
                tenantId: row.get('tenant_id') != null ? row.get('tenant_id').toString() : '',
                fullName: row.get('full_name') != null ? row.get('full_name').toString() : '',
                birthDate: row.get('birth_date') != null ? row.get('birth_date').toString() : '',
                gender: row.get('gender') != null ? row.get('gender').toString() : '',
                phone: row.get('phone') != null ? row.get('phone').toString() : '',
                address: row.get('address') != null ? row.get('address').toString() : '',
                createdAt: row.get('created_at') != null ? row.get('created_at').toString() : '',
                updatedAt: row.get('updated_at') != null ? row.get('updated_at').toString() : ''
            });
        }
    }
} catch (e) {
    logger.error('Error parsing DB result: ' + e);
}

var response = {
    success: true,
    count: resultList.length,
    data: resultList,
    timestamp: new Date().toISOString()
};

responseMap.put('d1', ResponseFactory.getSuccessResponse(JSON.stringify(response)));</script>
